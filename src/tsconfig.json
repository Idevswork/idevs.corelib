{
    "compileOnSave": false,
    "compilerOptions": {
      "experimentalDecorators": true,
      "declaration": true,
      "declarationDir": "../dist",
      "emitBOM": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "inlineSources": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "ES2015",
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "types": [
        "jquery",
        "jquery.validation",
        "jqueryui",
        "toastr"
      ],
      "paths": {
        "@serenity-is/corelib/q": ["./q"],
        "@serenity-is/corelib/slick": ["./slick"]
      },
      "outDir": "../dist",
      "suppressImplicitAnyIndexErrors": true,
      "target": "ES5",
      "lib": [
        "ES5",
        "ES2015",
        "DOM"
      ],
      "noEmitHelpers": false,
      "importHelpers": false,
      "jsx": "react"
    },
    "include": ["**/*"],
    "exclude": ["**/*.spec.ts"]
  }